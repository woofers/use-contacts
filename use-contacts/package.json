{
  "name": "use-contacts",
  "version": "0.1.0",
  "description": "",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "sideEffects": false,
  "src": "src/index.tsx",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "repository": "https://github.com/woofers/use-contacts",
  "keywords": [
    "react",
    "reactjs",
    "contact"
